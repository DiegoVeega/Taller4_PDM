<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewBookActivity">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Biblioteca"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:gravity="center"

            android:textColor="@color/colorTitle"/>
    <EditText
        android:inputType="number"
        android:hint="Id Libro (Se reemplazara el libro si existe el ID)"
        android:layout_marginTop="10dp"
        android:id="@+id/et_idBook"
        android:layout_width="355dp"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <EditText
            android:hint="Nombre del libro"
        android:textSize="15dp"
            android:id="@+id/et_Bookname"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    <EditText
        android:hint="Id del autor (Asegurese que exista el ID)"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:id="@+id/et_idAuthorBook"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <EditText
        android:hint="ISBN"
        android:layout_marginTop="10dp"
        android:id="@+id/et_ISBN"
        android:textSize="15dp"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <EditText
        android:hint="Caratula (int)"
        android:layout_marginTop="10dp"
        android:id="@+id/et_Cover"
        android:layout_width="355dp"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <EditText
        android:hint="Resumen"
        android:layout_marginTop="10dp"
        android:id="@+id/et_Summary"
        android:layout_width="355dp"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    ></LinearLayout>

    <Button

            android:id="@+id/btn_agregar"
            android:text="Agregar"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
        android:layout_gravity="center"

            android:background="@color/btn_add"/>
    </LinearLayout>

</LinearLayout>